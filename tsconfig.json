{
  "compilerOptions": {
    "target": "es6", // Prefer es6 over commonjs
    "lib": ["dom", "es2016"], // An array method did not work, had to include this for it to work
    "module": "es6", // Enable ES6 module syntax.
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true, // Enable strict type checking.
    "forceConsistentCasingInFileNames": true // Avoid case-sensitivity issues in imports.
  },
  "include": ["src/**/*.ts"] // Include all TypeScript files in "src" folder.
}
